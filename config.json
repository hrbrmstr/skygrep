{
  "rules": [
    {
      "field": "text",
      "pattern": "crypto|bitcoin",
      "kafkaTopic": "crypto_posts"
    },
    {
      "field": "text",
      "pattern": "cve-\\d{4}-\\d+|CVE-\\d{4}-\\d+",
      "kafkaTopic": "cve_mentions"
    }
  ],
  "kafka": {
    "brokers": ["localhost:19092"]
  }
}
